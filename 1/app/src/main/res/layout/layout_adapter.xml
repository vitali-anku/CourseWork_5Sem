<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/basic">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/ic_rectangle_3"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/edtext"
                android:layout_width="187dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="18dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="12dp"
                android:text="asd"
                android:textAppearance="@style/some_id_1" />


            <ImageButton
                android:id="@+id/edt"
                android:layout_width="22dp"
                android:layout_height="22.27dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="46dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16.36dp"
                android:background="@drawable/icon"
                android:src="@drawable/ic_vector_1_2"
                android:paddingBottom="10dp"/>

            <ImageButton
                android:id="@+id/clr"
                android:layout_width="22.83dp"
                android:layout_height="23.13dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16.58dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16.36dp"
                android:background="@drawable/icon"
                android:src="@drawable/ic_vector_1_3"
                android:paddingBottom="10dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
