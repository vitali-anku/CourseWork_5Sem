<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qwerty"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/basic"
    android:clickable="false">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_rectangle_3"
        app:cardCornerRadius="1dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateHistory"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="18dp"
                android:textAppearance="@style/some_id_3"/>
            
            <Button
                android:layout_width="8.34dp"
                android:layout_height="13.5dp"
                android:background="@drawable/ic_vector_next"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15.75dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="15.75dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
