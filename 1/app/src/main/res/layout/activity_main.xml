<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/basic"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_first"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_first"
        app:menu="@menu/activity_first_drawer" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="74dp"
            android:layout_marginBottom="104dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:elevation="2dp"
            android:dividerHeight="10dp"
            android:divider="@color/basic"/>
        <!--android:dividerHeight="100dp" />
        android:background="#00000000"-->

        <LinearLayout
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="33dp"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="146dp"
                android:layout_height="47dp"
                android:orientation="horizontal"
                android:background="@drawable/ic_rectangle"
                android:id="@+id/view2"
                android:clickable="true"
                android:layout_marginRight="30dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="14dp"
                    android:textAppearance="@style/some_id_2"
                    android:text="@string/next"/>

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="17dp"
                    android:src="@drawable/ic_vector_2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="146dp"
                android:layout_height="47dp"
                android:orientation="horizontal"
                android:background="@drawable/ic_rectangle"
                android:id="@+id/view1">

                <TextView
                    android:layout_width="74dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    android:textAppearance="@style/some_id_2"
                    android:text="@string/add"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="17dp"
                    android:src="@drawable/ic_vector"/>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>