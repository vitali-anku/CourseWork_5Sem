<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/basic"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_first"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_first"
        app:menu="@menu/activity_first_drawer" />

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="104dp"
            android:layout_marginTop="74dp"
            android:id="@+id/listStatistic"
            android:layout_alignParentTop="true"
            android:elevation="2dp"
            android:dividerHeight="10dp"
            android:divider="@color/basic"/>

        <Button
            android:id="@+id/again"
            android:layout_width="146dp"
            android:layout_height="47dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="33dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="195dp"
            android:background="@drawable/ic_rectangle"
            android:textAppearance="@style/some_id_2"
            android:text="@string/to_main"/>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>