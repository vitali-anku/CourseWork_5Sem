<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/ic_rectangle_3"
    android:elevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/edtext"
            android:layout_width="187dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:text="asd"
            android:textAppearance="@style/some_id_1" />


        <Button
            android:id="@+id/edt"
            android:layout_width="12dp"
            android:layout_height="12.27dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="46dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16.36dp"
            android:background="@drawable/ic_vector_1_2" />

        <Button
            android:id="@+id/clr"
            android:layout_width="12.83dp"
            android:layout_height="13.13dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16.58dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16.36dp"
            android:background="@drawable/ic_vector_1_3" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
